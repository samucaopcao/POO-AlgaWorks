package com.algaworks.curso.fjoo.entrada_arq;

import java.io.BufferedReader;
import java.io.FileReader;

public class LendoArquivo {

	public static void main(String[] args) {
		try(BufferedReader reader = new BufferedReader(new FileReader("email_2.txt"))) {

		
			String email = null;
			
			//Enquanto tiver conteúdo no arquivo continua a leitura do mesmo, tirando os espaços e linhas em branco
			while((email = reader.readLine()) != null) {
				System.out.println("Enviando email para: " + email);
				email = reader.readLine();
			}
			
		} catch (Exception e) {
			System.err.println("Não foi possível ler o arquivo.");
		}

		
	}

}
